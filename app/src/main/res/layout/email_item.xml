<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/card_view_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="F"
            android:background="@drawable/circle"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/darker_gray"
            tools:text="Facebook"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/txt_date"
            android:layout_toEndOf="@id/txt_icon"
            android:layout_alignTop="@id/txt_icon"/>

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darker_gray"
            tools:text="Subject Subject Subject Subject Subject Subject Subject Subject Subject"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_below="@id/txt_user"
            android:layout_alignStart="@id/txt_user"/>

        <TextView
            android:id="@+id/txt_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darker_gray"
            tools:text="Preview Preview Preview Preview Preview Preview Preview Preview Preview"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_below="@id/txt_subject"
            android:layout_alignStart="@id/txt_user"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darker_gray"
            tools:text="05 Jun"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_border_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>